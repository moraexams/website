---
import type { GetStaticPaths } from "astro";
import { langStaticRoutes } from "../../i18n/ui";
import Layout from "../../layouts/Layout.astro";
import NavigationBar from "../../sections/1-navigation-bar.astro";
import Button from "../../components/Button.astro";

const pageTitle = "Instructions";

export const getStaticPaths = (() => {
	return langStaticRoutes;
}) satisfies GetStaticPaths;
---

<Layout pageTitle={pageTitle}>
	<div class="bg-purple-800">
		<NavigationBar />
	</div>
	<section
		class="min-h-screen bg-delft-blue-50/50 text-primary-900 flex justify-center"
	>
		<div
			class="max-w-screen-xl my-10 sm:m-20 bg-white shadow sm:rounded-lg flex justify-center px-6 py-5 sm:p-12 flex-col items-center h-fit flex-1"
		>
			<h1 class="text-4xl font-bold mb-4">{pageTitle}</h1>

			<div style="font-family: Arial; max-width: 600px; font-size: 17px;">
				<div
					style="background: #efe6f5; padding: 15px; border-left: 4px solid #6b21a8; margin-bottom: 10px;"
				>
					It is mandatory to pay the examination fee before filling up the
					online application form.
				</div>

				<div
					style="background: #efe6f5; padding: 15px; border-left: 4px solid #6b21a8; margin-bottom: 10px;"
				>
					English <strong>BLOCK LETTERS</strong> must be used to fill the application
					form.
				</div>

				<div
					style="background: #efe6f5; padding: 15px; border-left: 4px solid #6b21a8; margin-bottom: 10px;"
				>
					<h3 style="color: #490665; margin-top: 0;">Registration Fee :</h3>
					<ul style="margin-bottom: 0;">
						<li>ICT only: <strong>Rs. 200.00</strong></li>
						<li>Other options: <strong>Rs. 600.00</strong></li>
					</ul>
				</div>

				<div
					style="background: #efe6f5; padding: 15px; border-left: 4px solid #6b21a8; margin-bottom: 10px;"
				>
					<h3 style="color: #490665; margin-top: 0;">Bank Account Details :</h3>
					<p>
						<strong>Account Name:</strong> A ARRATHIKASARMA<br />
						<strong>Account No:</strong> 91616090<br />
						<strong>Bank:</strong> BOC<br />
						<strong>Branch:</strong> Nallur
					</p>
					<p>
						<strong>Description Format:</strong><br />
						<code>[NIC] - [FULL NAME]</code> (e.g., <code
							>123456789 - ABCD EFGH</code
						>)
					</p>
				</div>
			</div>

			<form id="instructionForm">
				<label class="flex items-start gap-2 my-6 text-lg">
					<input type="checkbox" id="agreeCheckbox" class="mt-2" />
					<span
						>I have read and understood the above mentioned details before
						proceeding.</span
					>
				</label>
				<div class="flex justify-end mt-4">
					<Button type="button" id="nextButton">Next</Button>
				</div>
			</form>
		</div>
	</section>
	<script>
		document.addEventListener("DOMContentLoaded", () => {
			const checkbox = document.getElementById(
				"agreeCheckbox",
			) as HTMLInputElement;
			const nextButton = document.getElementById("nextButton");

			nextButton.addEventListener("click", () => {
				if (checkbox.checked) {
					const lang = window.location.pathname.split("/")[1];
					window.location.href = `/${lang}/registration-2`;
				} else {
					alert(
						"Please confirm you've read the instructions before proceeding.",
					);
				}
			});
		});
	</script>
</Layout>

<style>
	h4 {
		font-size: 26px;
		line-height: 1px;
		font-family: "Amatic SC", cursive;
	}

	.grid-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 20px;
		justify-items: center;
		padding: auto;
	}

	.card {
		color: #430143;
		width: 300px;
		height: 400px;
		background: #ffffff;
		transform-style: preserve-3d;
		transform: perspective(2000px);
		box-shadow:
			inset 300px 0 50px rgba(101, 2, 90, 0.5),
			20px 0 60px rgba(0, 0, 0, 0.5);
		transition: 1s;
		position: relative;
	}

	.card:hover {
		transform: perspective(2000px) rotate(0deg) scale(0.9);
		box-shadow:
			inset 20px 0 50px rgba(0, 0, 0, 0.5),
			0 10px 100px rgba(0, 0, 0, 0.5);
	}

	.card:before {
		content: "";
		position: absolute;
		top: -5px;
		left: 0;
		width: 100%;
		height: 5px;
		background: #80317db8;
		transform-origin: bottom;
		transform: skewX(-45deg);
	}

	.card:after {
		content: "";
		position: absolute;
		top: 0;
		right: -5px;
		width: 5px;
		height: 100%;
		background: #80317db8;
		transform-origin: left;
		transform: skewY(-45deg);
	}

	.imgBox {
		width: 100%;
		height: 100%;
		position: relative;
		transform-origin: left;
		transition: 0.7s;
	}

	.bark {
		position: absolute;
		background: #80317d;
		width: 100%;
		height: 100%;
		opacity: 0;
		transition: 0.7s;
	}

	.imgBox img {
		min-width: 250px;
		max-height: 400px;
	}

	.card:hover .imgBox {
		transform: rotateY(-135deg);
	}

	.card:hover .bark {
		opacity: 1;
		transition: 0.6s;
		box-shadow: 300px 200px 100px rgba(0, 0, 0, 0.4) inset;
	}

	.details {
		position: absolute;
		top: 0;
		left: 0;
		z-index: -1;
		margin-top: 60px;
	}

	p {
		text-decoration: none;
		text-align: center;
		font-size: 20px;
		line-height: 5px;
		transform: rotate(0deg);
		padding: 0 0 0 60px;
	}

	.sch {
		text-align: center;
		text-decoration: underline;
		font-size: 25px;
		padding: 0px 0px 0 60px;
	}

	.exam {
		text-decoration: underline;
		text-align: center;
		font-size: 25px;
		padding: 0px 0px 0 60px;
	}

	.details-head {
		text-align: center;
		font-size: 25px;
	}

	.text-right {
		text-align: right;
	}
</style>

<style>
	.button {
		cursor: pointer;
		position: relative;
		border: none;
		background: none;
		transition-timing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
		transition-duration: 400ms;
		transition-property: color;
	}
	a {
		text-decoration: none;
		color: #430143;
	}

	.button:focus,
	.button:hover {
		color: #54088a;
	}

	.button:focus:after,
	.button:hover:after {
		width: 100%;
		left: 0%;
	}

	.button:after {
		content: "";
		pointer-events: none;
		bottom: -2px;
		left: 50%;
		position: absolute;
		width: 0%;
		height: 2px;
		background-color: #54088a;
		transition-timing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
		transition-duration: 400ms;
		transition-property: width, left;
	}
</style>

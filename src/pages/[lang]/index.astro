	<!-- <LookingForMoraExamPastpapers /> -->
	<ElearningVideos />
	<Footer />
</Layout>

<style is:global>
	body {
		@apply text-black;
	}
	body:has(#nav-bar-toggle:checked),
	body.disable-scrolling {
		overflow: hidden;
	}
	body > * {
		@apply px-[var(--body-margin-x)];
	}
	section {
		@apply scroll-mt-20;
	}
</style>

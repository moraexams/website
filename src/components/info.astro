---
interface Props {
	text: string;
}

const { text } = Astro.props;
---

<p
	class="bg-purple-100 border-solid border-[2px] border-purple-500 w-fit px-3 py-2 rounded-lg mb-4 text-purple-950 font-medium inline-flex items-center gap-2"
>
	<svg
		xmlns="http://www.w3.org/2000/svg"
		width="24"
		height="24"
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round"
		class="icon icon-tabler icons-tabler-outline icon-tabler-info-circle -mt-[1px] size-5"
	>
		<>
			<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
			<path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
			<path d="M12 9h.01"></path>
			<path d="M11 12h1v4h1"></path>
		</>
	</svg>
	{text}
</p>

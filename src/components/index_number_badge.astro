---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

interface Props {
	badge_text: string;
	value_text: string;
}

const { badge_text, value_text } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="flex flex-col space-y-1">
	<span class="text-sm md:text-base font-light text-gray-600">{badge_text}</span
	>
	<div
		class="flex items-center w-full bg-gray-50 border border-black rounded-sm md:rounded-lg text-lg md:text-xl text-wrap font-medium px-3 py-2"
		set:html={value_text}
	/>
</div>

		<div class="ag-courses_box">
			<TimetableCard
				date={new Date("2025-09-20")}
				subjects={[
					{
						name_en: "Combined Mathematics I",
						name_ta: "இணைந்த கணிதம் I",
						icon: "fa-square-root-variable",
						time: "1:30 PM - 4:40 PM",
					},
					{
						name_en: "Biology I",
						name_ta: "உயிரியல் I",
						icon: "fa-stethoscope",
						time: "1:30 PM - 3:30 PM",
					},
				]}
			/>
			<TimetableCard
				date={new Date("2025-09-21")}
				subjects={[
					{
						name_en: "Combined Mathematics II",
						name_ta: "இணைந்த கணிதம் II",
						icon: "fa-square-root-variable",
						time: "1:30 PM - 4:40 PM",
					},
					{
						name_en: "Biology II",
						name_ta: "உயிரியல் II",
						icon: "fa-stethoscope",
						time: "1:30 PM - 4:40 PM",
					},
				]}
			/>
			<TimetableCard
				date={new Date("2025-09-27")}
